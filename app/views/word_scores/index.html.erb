<%- model_class = WordScore -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to "Calculate the Score of a New Word",
            new_word_score_path,
            :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:word) %></th>
    </tr>
  </thead>
  <tbody>
    <% @word_scores.each do |word_score| %>
      <tr>
        <td width="20%"><%= word_score.score %></td>
        <td><%= word_score.word %></td>
      </tr>
    <% end %>
  </tbody>
</table>